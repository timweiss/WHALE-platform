<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Light) - Material 3 -->
    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors matching Compose MaterialTheme -->
        <item name="colorPrimary">@color/purple_40</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_grey_40</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/purple_grey_40</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/purple_grey_40</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/pink_40</item>
        <item name="colorOnTertiary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_40</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
</resources>